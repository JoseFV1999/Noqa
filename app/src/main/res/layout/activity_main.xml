<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:background="#EFEFEF"


            android:drawableStart="@drawable/custom_email_icon"
            android:drawablePadding="12dp"
            android:fontFamily="@font/montserratregular"
            android:hint="Correo"
            android:inputType="textEmailAddress"


            android:paddingStart="10dp"
            android:textColorHighlight="#E1F5FF"
            android:textColorHint="#546E7A"
            android:textColorLink="#E1F5FF"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/txtPassword"
            android:layout_width="match_parent"

            android:layout_height="57dp"
            android:layout_marginTop="25dp"

            app:helperTextTextColor="@color/IconFocused"
            app:hintEnabled="false"

            app:passwordToggleEnabled="true"
            app:placeholderTextColor="@color/IconFocused">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_lock_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserratregular"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:padding="15dp"
                android:paddingStart="10dp"
                android:textColorHighlight="@color/IconFocused"
                android:textColorHint="#546E7A"
                android:textColorLink="@color/IconFocused"

                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnMain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="#FF0000"
            android:text="Ingresar"
            android:layout_gravity="center"/>

    </LinearLayout>



</LinearLayout>