<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3330"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageSEIF"
        android:layout_width="284dp"
        android:transitionName="trans_log"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icono_noqa_sin_fondo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete los siguientes datos"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#3333"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/txt_User"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_input"
                android:backgroundTint="@color/EditTextBG"
                android:drawableStart="@drawable/custom_person_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/montserratregular"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_Email"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_input"
                android:backgroundTint="@color/EditTextBG"
                android:drawableStart="@drawable/custom_email_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/montserratregular"
                android:hint="Correo"

                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_Phone"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_input"
                android:backgroundTint="@color/EditTextBG"
                android:drawableStart="@drawable/custom_phone_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/montserratregular"
                android:hint="Teléfono"
                android:inputType="phone"
                android:maxLength="9"
                android:paddingStart="10dp"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_Password"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_input"
                    android:backgroundTint="@color/EditTextBG"
                    android:drawableStart="@drawable/custom_lock_icon"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:paddingStart="10dp"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnCrearCuenta"
                android:layout_width="250dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="@color/black"
                android:text="Registrarse"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ó"
                android:gravity="center"/>

            <com.google.android.gms.common.SignInButton
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="aea"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>